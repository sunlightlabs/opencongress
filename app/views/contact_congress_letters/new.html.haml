:javascript
  var sigLength=0;

  function mbHoverIn(object) {
    $(object).find("div.will_add_text_box:first").fadeIn(.3);
  }
  function mbHoverOut(object) {
    $(object).find("div.will_add_text_box:first").fadeOut(.3);
  }
  function mbAddText(object) {
    var insertPoint;

    txt = $(object).find("div.message_builder_add_text:first").text();
    msg = $('div.formageddon_contact_form textarea:first')

    insertPoint = msg.val().length - sigLength;
    msg.val(msg.val().substring(0, insertPoint)+"\n\n"+unescape(txt)+msg.val().substring(insertPoint));
  }

  var assemble_address = function () {
    var street = $("#formageddon_formageddon_thread_sender_address1").val().toString();
    var city = $("#formageddon_formageddon_thread_sender_city").val().toString();
    var state = $("#formageddon_formageddon_thread_sender_state").val().toString();
    var zip5 = $("#formageddon_formageddon_thread_sender_zip5").val().toString();
    var zip4 = $("#formageddon_formageddon_thread_sender_zip4").val().toString();
    var address = "";
    if (street.length > 0) {
      address = street;
    }
    if (city.length > 0) {
      if (address.length == 0) {
        address = city;
      } else {
        address = address + ", " + city;
      }
    }
    if (state.length > 0) {
      if (address.length == 0) {
        address = state;
      } else {
        address = address + ", " + state;
      }
    }
    if (zip5.length == 5) {
      if (address.length == 0) {
        address = zip5;
      } else {
        address = address + ", " + zip5;
      }
    }
    return address;
  };

  // Look up reps when address-related fields change
  $('#formageddon_formageddon_thread_sender_zip5, #formageddon_formageddon_thread_sender_address1, #formageddon_formageddon_thread_sender_address2, #formageddon_formageddon_thread_sender_city, #formageddon_formageddon_thread_sender_state').bind('keydown', function(e){
    $(this).data('previous_val', $(this).val());
  });
  var geocode_request_timeout = null;
  $('#formageddon_formageddon_thread_sender_zip5, #formageddon_formageddon_thread_sender_address1, #formageddon_formageddon_thread_sender_address2, #formageddon_formageddon_thread_sender_city, #formageddon_formageddon_thread_sender_state').bind('keyup change', function(e){
    if($(this).data('previous_val') == $(this).val()) return;
    $(this).data('previous_val', $(this).val());
    if(geocode_request_timeout) clearTimeout(geocode_request_timeout);
    geocode_request_timeout = setTimeout(function(){
      geocode_request_timeout = null;
      var address = escape(assemble_address()),
      zip5 = $("#formageddon_formageddon_thread_sender_zip5").val().toString();
      $('#sen_0, #sen_1, #rep').html("<img src='/images/spinner-ovals.gif' />");
      $j.ajax({
        url: '/contact_congress_letters/get_recipients.js?bill=#{@bill.nil? ? '' : @bill.ident}&issue=#{@issue.nil? ? '' : @issue.id}&address=' + address
      });
    }, 500);
  });

  $("#formageddon_formageddon_thread_sender_last_name").change(function() {
    var name = $("#formageddon_formageddon_thread_sender_first_name").val() + " " +
               $("#formageddon_formageddon_thread_sender_last_name").val();
    var sig = "\n\nSincerely,\n" + name;

    $('.desk .from').html('From the Desk of ' + name);
    sigLength = sig.length

    $('#formageddon_formageddon_thread_formageddon_letters_attributes_0_message').val(
       $('#formageddon_formageddon_thread_formageddon_letters_attributes_0_message').val() + sig
    )
  });


  $(".message_builder_clickable").hover(function(){ mbHoverIn(this) }, function(){ mbHoverOut(this) });
  $(".message_builder_clickable").click(function(){ mbAddText(this) });

  $(document).ready(function() {
    $('.formageddon_submit').addClass("button blue huge");
  });


